<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="ChooseStressTypeActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/perceivedcard"
        app:strokeWidth="1dp"
        android:layout_marginTop="30dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_width="330dp"
        android:layout_gravity="center|center_horizontal"
        android:clickable="true"
        app:cardElevation="10dp">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:elevation="100dp"
            >

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/perceived"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perceived Stress"
                android:textSize="20dp"/>
        </LinearLayout>

</com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/presentcard"
        app:strokeWidth="1dp"
        android:layout_marginTop="30dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_width="330dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:elevation="100dp">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/present"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Present Stress"
                android:textSize="20dp"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/reportb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Report"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="316dp" />

       <Button
        android:id="@+id/reliefb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's get some relief"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="316dp" />

    </LinearLayout>





</LinearLayout>